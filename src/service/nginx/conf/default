upstream react {
	server react:react_port;
}

upstream nestjs {
	server nestjs:nestjs_port;
}

server {
	listen 80;
	listen [::]:80;

	server_name www.my_domain my_domain;

	return 301 https://my_domain$request_uri;
}

server {
	listen 80;
	listen [::]:80;

	server_name dev.my_domain;

	return 301 https://dev.my_domain$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name www.my_domain my_domain;

	ssl_certificate my_certs;
	ssl_certificate_key my_certs_key;

	ssl_protocols TLSv1.3;

	location / {
		proxy_pass http://react;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
	}
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name dev.my_domain;

	ssl_certificate my_certs;
	ssl_certificate_key my_certs_key;

	ssl_protocols TLSv1.3;

	location / {
		proxy_pass http://nestjs;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
	}
}